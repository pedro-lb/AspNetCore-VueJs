<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no, minimal-ui">

    <title>Aspnet Core + Vue.js + Vuesax</title>

    <environment include="Development">
        <link href="https://cdn.jsdelivr.net/npm/vuesax/dist/vuesax.css" rel="stylesheet">
    </environment>
    <environment exclude="Development">
        <link href="https://cdn.jsdelivr.net/npm/vuesax/dist/vuesax.min.css" rel="stylesheet">
    </environment>

    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    @RenderSection("Styles", required: false)
</head>
<body>
    <div id="app">
        <main role="main">
            @RenderBody()
        </main>
    </div>

    <environment include="Development">
        <script src="https://cdn.jsdelivr.net/npm/vue/dist/vue.js"></script>
        <script src="https://cdn.jsdelivr.net/npm/vuesax/dist/vuesax.umd.js"></script>
    </environment>
    <environment exclude="Development">
        <script src="https://cdn.jsdelivr.net/npm/vue/dist/vue.min.js"
                asp-fallback-src="~/lib/vue/vue.min.js"
                crossorigin="anonymous">
        </script>
        <script src="https://cdn.jsdelivr.net/npm/vuesax/dist/vuesax.umd.min.js"></script>
    </environment>

    @RenderSection("Scripts", required: false)

    <script src="~/js/site.js" asp-append-version="true"></script>
</body>
</html>